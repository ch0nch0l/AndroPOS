<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.chonchol.andropos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".layout.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".layout.AddProductActivity" />
        <activity android:name=".layout.StockActivity" />
        <activity android:name=".layout.ConfirmSellActivity" />
        <activity android:name=".layout.ProfileActivity" />
        <activity android:name=".layout.LoginActivity" />
        <activity android:name=".layout.CategoryListActivity" />
        <activity android:name=".layout.AddCategoryActivity" />
        <activity android:name=".layout.CategoryActivity" />
        <activity android:name=".layout.AddSubcategoryActivity" />
        <activity android:name=".layout.AddSaleActivity" />
        <activity android:name=".layout.SaleRecordActivity" />
        <activity android:name=".layout.AddUserActivity" />
        <activity android:name=".layout.UserListActivity" />
        <activity android:name=".layout.ClientLoginActivity" />
        <activity android:name=".layout.StockReportActivity"/>
        <activity android:name=".layout.SaleReportActivity"/>
        <activity android:name=".layout.ProfitReportActivity"/>
    </application>

</manifest>