<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:background="#fefefe"
    android:elevation="2dp"
    android:weightSum="14.5">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:src="@drawable/ic_cat_list"
        android:layout_weight="1.5"/>

    <LinearLayout
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCartProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"/>


        <TextView
            android:id="@+id/txtCartCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textSize="13dp"
            android:textColor="@color/colorFade"/>

    </LinearLayout>

    <EditText
        android:id="@+id/inputCartQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="13dp"
        android:textStyle="bold"
        android:gravity="center"
        android:enabled="false"
        android:maxLength="2"
        android:text="2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="X"/>

    <EditText
        android:id="@+id/txtCartUnitPrice"
        android:layout_width="0dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="13dp"
        android:enabled="false"
        android:hint="250"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BDT"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/txtCartTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="18dp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_delete"/>
</LinearLayout>