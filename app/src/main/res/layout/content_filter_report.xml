<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".layout.FilterReportActivity"
    tools:showIn="@layout/activity_filter_report">

    <Button
        android:id="@+id/btnStockAlertReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="Stock Alert Report"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnReportByProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="By Product"
        android:textColor="#ffffff"
        android:textSize="18dp" />


    <RadioGroup
        android:id="@+id/radGrpReportType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioWeekly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weekly"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioMonthly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monthly"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioCustom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Custom"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
    </RadioGroup>


    <LinearLayout
        android:id="@+id/layoutDateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/inputFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Date"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/inputToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>